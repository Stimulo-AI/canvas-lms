RAILS_ENV=production
NODE_ENV=production

# External URL (public FQDN used by users)
CANVAS_DOMAIN=canvas.example.com
CANVAS_FILES_DOMAIN=files.canvas.example.com

# Database (managed PostgreSQL or container)
PGHOST=postgres
PGPORT=5432
PGDATABASE=canvas_production
PGUSER=canvas
PGPASSWORD=REPLACE_ME_STRONG_PASSWORD

# Redis (use rediss:// if TLS enabled)
REDIS_URL=redis://default:REPLACE_ME_REDIS_PASSWORD@redis:6379/5

# SMTP for email notifications
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USER=apikey_or_username
SMTP_PASS=REPLACE_ME_SMTP_PASSWORD
SMTP_AUTH=plain
SMTP_ENABLE_STARTTLS_AUTO=true
CANVAS_OUTGOING_ADDRESS=no-reply@${SMTP_DOMAIN}

# Admin account for db:initial_setup
CANVAS_LMS_ADMIN_EMAIL=admin@${SMTP_DOMAIN}
CANVAS_LMS_ADMIN_PASSWORD=REPLACE_ME_ADMIN_PASSWORD
CANVAS_LMS_ACCOUNT_NAME=Your Organization Name
CANVAS_LMS_STATS_COLLECTION=opt_out

# S3-compatible Object Storage (OCI, AWS, MinIO, etc.)
S3_BUCKET=canvas-files
S3_ACCESS_KEY_ID=REPLACE_ME_ACCESS_KEY
S3_SECRET_ACCESS_KEY=REPLACE_ME_SECRET_KEY
S3_REGION=us-ashburn-1
S3_NAMESPACE=your_oci_namespace
S3_ENDPOINT=https://${S3_NAMESPACE}.compat.objectstorage.${S3_REGION}.oraclecloud.com
S3_PROTOCOL=https

# Security - Generate with: openssl rand -hex 64
ENCRYPTION_KEY=REPLACE_ME_WITH_128_CHAR_HEX_STRING

# Force SSL for production (set false for local HTTP dev)
FORCE_SSL=true
