RAILS_ENV=production
NODE_ENV=production

# External URL (public FQDN used by users)
CANVAS_DOMAIN=canvas.example.com
CANVAS_FILES_DOMAIN=files.canvas.example.com

# DB
PGHOST=postgres
PGPORT=5432
PGDATABASE=canvas_production
PGUSER=canvas
PGPASSWORD=REPLACE_ME

# Redis (use rediss:// if TLS)
REDIS_URL=redis://default:REPLACE_ME@redis:6379/5

# SMTP
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USER=apikey_or_user
SMTP_PASS=REPLACE_ME
SMTP_AUTH=plain
SMTP_ENABLE_STARTTLS_AUTO=true
CANVAS_OUTGOING_ADDRESS=no-reply@${SMTP_DOMAIN}

# Admin bootstrap for db:initial_setup
CANVAS_LMS_ADMIN_EMAIL=admin@${SMTP_DOMAIN}
CANVAS_LMS_ADMIN_PASSWORD=REPLACE_ME_STRONG
CANVAS_LMS_ACCOUNT_NAME=Stimulo
CANVAS_LMS_STATS_COLLECTION=opt_out

# S3-compatible (OCI Object Storage via S3 Compatibility API)
S3_BUCKET=stimulo-canvas
S3_ACCESS_KEY_ID=REPLACE_ME
S3_SECRET_ACCESS_KEY=REPLACE_ME
S3_REGION=us-ashburn-1
S3_NAMESPACE=your_oci_namespace
S3_ENDPOINT=https://${S3_NAMESPACE}.compat.objectstorage.${S3_REGION}.oraclecloud.com
S3_PROTOCOL=https
